# HALO Self-Hosted Configuration
# Copy this file to .env and update the values

# Database Configuration
DB_PASSWORD=your_secure_password_here

# JWT Configuration (must be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# Supabase API Keys (generate these for your self-hosted instance)
ANON_KEY=your_anon_key_here
SERVICE_ROLE_KEY=your_service_role_key_here

# Application Configuration
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=

# Authentication Configuration
DISABLE_SIGNUP=false
MAILER_AUTOCONFIRM=true

# Email Configuration (optional)
SMTP_ADMIN_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SENDER_NAME=HALO Automation Platform

# URL paths for email templates
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=/auth/v1/verify

# External API Keys (for automation integrations)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
CREDENTIAL_ENCRYPTION_KEY=your_32_character_encryption_key_here